# Claude API (required for article generation)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API (optional - for DALL-E 3 header image generation)
OPENAI_API_KEY=sk-...

# Late.dev (required for social media scheduling)
LATE_API_KEY=your_late_dev_api_key
LATE_LINKEDIN_ACCOUNT_ID=your_linkedin_account_id
LATE_TWITTER_ACCOUNT_ID=your_twitter_account_id

# Vercel Cron Auth (required for automated weekly runs)
CRON_SECRET=generate_a_random_string_here

# Vercel Blob Storage (auto-set when adding Blob store in Vercel dashboard)
BLOB_READ_WRITE_TOKEN=vercel_blob_...

# Base URL (set to your Vercel deployment URL)
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.app
